<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogMealActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Meal"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_calorieIntakeTodayLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Calorie Intake:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tv_calorieIntakeToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1220 cal"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_calorieIntakeWeekLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Week's Calorie Intake:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_calorieIntakeWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3660 cal"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_todayMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Meals:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todayMeals"
        android:layout_width="300sp"
        android:layout_height="200sp"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logMeal"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Log"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancelLogMeal"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

</LinearLayout>