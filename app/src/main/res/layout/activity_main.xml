<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="Profile Picture"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_image"
        android:src="@drawable/user_blank"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Johnathan R. Wheelo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight: 300lbs"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_setWeight"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Set New Weight"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_logMeal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Log Meal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_logActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Log Activity"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_setGoals"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Set Goals"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

</LinearLayout>